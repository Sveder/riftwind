[Unit]
Description=Riftwind Flask Application
After=network.target

[Service]
Type=simple
User=sveder
Group=users
WorkingDirectory=/home/sveder/rift/riftwind
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="RIOT_API_KEY=RGAPI-95765231-7c4f-4f44-a579-cfa99cb036cf"
ExecStart=/usr/bin/python3 /home/sveder/.local/bin/gunicorn -c gunicorn_config.py app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
